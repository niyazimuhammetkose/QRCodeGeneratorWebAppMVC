@model QrCodeGeneratorWebAppMVC.Models.ViewModels.QrCodes.QrCodeIndexViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <!-- Create New Button -->
    <a asp-action="Create" class="btn-primary">
        <i class="fas fa-plus-circle"></i> Create New
    </a>

    <!-- Arama Formu -->
    <form asp-controller="QrCodes" asp-action="Index" method="get" class="d-flex align-items-center">
        <div class="form-group me-3">
            <select asp-for="QrCodeType" asp-items="Model.QrCodeTypes" class="form-select">
                <option value="">All</option>
            </select>
        </div>

        <div class="form-group me-3">
            <input type="text" asp-for="SearchString" class="form-control" placeholder="Search by name..." />
        </div>

        <div class="form-group me-3">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i></button>
        </div>
    </form>
</div>
