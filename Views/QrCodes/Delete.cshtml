                @Html.DisplayNameFor(model => model.VCardNote)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VCardNote)
            </dd>
        }
    </dl>

    <hr />

    <div class="action-icons">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> | 
            <a asp-action="Index" data-tooltip="Back To List"><i class="fas fa-backward"></i></a>
        </form>
    </div>
